# Production Environment Variables for Task Management Application
# Copy this file to .env and update the values for production

# =====================================
# DATABASE CONFIGURATION
# =====================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=task_management
MYSQL_USER=taskuser
MYSQL_PASSWORD=your_secure_db_password_here
MYSQL_PORT=3307

# =====================================
# JWT CONFIGURATION
# =====================================
# Generate a strong secret key for production (minimum 32 characters)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_for_production_environment_12345
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =====================================
# APPLICATION CONFIGURATION
# =====================================
API_PORT=8080
SPRING_PROFILES_ACTIVE=production

# =====================================
# NGINX CONFIGURATION
# =====================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =====================================
# LOGGING CONFIGURATION
# =====================================
LOGGING_LEVEL_COM_TASKMANAGEMENT=INFO
LOGGING_LEVEL_ROOT=WARN

# =====================================
# SECURITY SETTINGS
# =====================================
# Set to true in production with proper SSL certificates
FORCE_HTTPS=false

# =====================================
# MONITORING & OBSERVABILITY
# =====================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =====================================
# BACKUP CONFIGURATION
# =====================================
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=false
